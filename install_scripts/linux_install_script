sudo apt update && sudo apt upgrade -y

sudo apt install ttf-mscorefonts-installer neofetch htop git flatpak gnome-software-plugin-flatpak tlp -y

flatpak remote-add --if-not-exists flathub https://flathub.org/repo/flathub.flatpakrepo

flatpak install flathub com.bitwarden.desktop org.videolan.VLC com.discordapp.Discord com.visualstudio.code com.slack.Slack com.spotify.Client org.gimp.GIMP com.sublimetext.three org.qbittorrent.qBittorrent com.obsproject.Studio org.libreoffice.LibreOffice com.valvesoftware.Steam us.zoom.Zoom 

sudo tlp start

sudo rm -rf /etc/sudoers.d/0pwfeedback #to remove password feedback on distros like mint

reboot


